<DialogLayout>
    <ChildContent>
        <p>@Text</p>
    </ChildContent>
    <Footer>
        <button type="button" class="btn btn-primary" @onclick="Close">Close</button>
    </Footer>
</DialogLayout>

@code {
    [CascadingParameter]
    public BlazoredModalInstance BlazoredModal { get;set; }

    [Parameter]
    public string Text { get; set; }

    private void Close() {
        BlazoredModal.Close(ModalResult.Cancel());
    }
}