@page "/individuals"
@inject IStorageAPI Storage
@inject RoutingService Routing

<Scaffold>
    <Title>Individuals</Title>
    <ChildContent>
        <div class="card-columns">
            @foreach (var item in values) {
                <IndividualCard Value="@item" OnUpdate="@Refresh" />
            }
        </div>
    </ChildContent>
</Scaffold>

@code {
    private IEnumerable<IndividualData> values = Array.Empty<IndividualData>();

    protected override async Task OnInitializedAsync() {
        await Refresh();
    }

    private async Task Refresh() {
        var values = await Storage.GetIndividuals();
        this.values = await Task.WhenAll(values.Select(i => IndividualData.Instantiate(i)));
    }
}