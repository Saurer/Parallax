@inject RoutingService Routing

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Parallax</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <i class="nav-icon feather-activity"></i> Event log
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@Routing.Models()">
                <i class="nav-icon feather-code"></i> Models
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@Routing.Attributes()">
                <i class="nav-icon feather-check-circle"></i> Attributes
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@Routing.Actors()">
                <i class="nav-icon feather-user"></i> Actors
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@Routing.Roles()">
                <i class="nav-icon feather-shield"></i> Roles
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@Routing.Entities()">
                <i class="nav-icon feather-target"></i> Entities
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="@Routing.Individuals()">
                <i class="nav-icon feather-users"></i> Individuals
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu() {
        collapseNavMenu = !collapseNavMenu;
    }
}
